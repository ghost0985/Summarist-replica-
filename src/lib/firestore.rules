rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow everyone (including guests) to read books
    match /books/{bookId} {
      allow read: if true;
    }

    // Only authenticated users can access their user data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
