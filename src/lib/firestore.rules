rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Everyone (even logged out users) can read books
    match /books/{bookId} {
      allow read: if true;
    }

    // Only authenticated users can read/write their own user doc
    match /users/{userId} {
      allow read, write: if
        request.auth != null && request.auth.uid == userId;
    }

    // (Optional) Allow logged-in users to read global metadata like app config
    match /metadata/{docId} {
      allow read: if true;
    }
  }
}
